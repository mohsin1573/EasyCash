<h1>Admin Dashboard - User Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'View Account', admin_account_path(user.account) %>
          <%= link_to 'Edit Account', edit_admin_account_path(user.account) %>
        <%= link_to 'Delete Account', destroy_account_path(user.account), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
