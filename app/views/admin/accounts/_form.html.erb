<div class="container">
    <h1 class="well">Account Registration Form</h1>
	<div class="col-lg-12 well">
	<div class="row">
          <%= form_with(model: admin_account, local: true) do |f| %>
					<div class="col-sm-12">
						<div class="row">
							<div class="col-sm-6 form-group">
								<label>First Name</label>
								<%= f.text_field :firstname, class: "form-control" %>
							</div>
							<div class="col-sm-6 form-group">
								<label>Last Name</label>
								 <%= f.text_field :lastname, class: "form-control" %>
							</div>
						</div>					
						<div class="form-group">
							<label>Address</label>
							 <%= f.text_area :address, class: "form-control" %>
						</div>	
						<div class="row">
							<div class="col-sm-4 form-group">
								<label>DOB</label>
								 <%= f.date_field :dob, class: "form-control" %>
							</div>	
							<div class="col-sm-4 form-group">
                <label for="user_gender">Gender</label>
                 <%= f.select :gender, ['Male', 'Female', 'Other'], {}, class: "form-control" %>
                </div>

							<div class="col-sm-4 form-group">
                  <label for="user_image">Image</label>
                   <%= f.file_field :image, class: "form-control", id: "user_image" %>
                </div>
	
						</div>
						<div class="row">
							<div class="col-sm-6 form-group">
								<label>Balance</label>
								<%= f.number_field :balance, class: "form-control" %>
							</div>
              		
						<div class="col-sm-6 form-group">
						   <label>Phone Number</label>
					     <%= f.text_field :phone, class: "form-control" %> 
					  </div>		
					</div>						
				
					<div class="col-sm-4 form-group">
            <%= f.submit 'Create Account', class: "btn btn-lg btn-info" %>
            <%= link_to 'Back', root_path, class: "btn btn-lg btn-default" %>
          </div>
          </div>
				<%end%> 
				</div>
    	</div>
	</div>


