<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(@transaction, url: transactions_path) do |f| %>
        <%= f.hidden_field :transaction_type, value: action_name.capitalize %>
        
        <div class="mb-3">
          <strong>Current Balance:</strong> $<%= current_user.account.balance %>
        </div>
        
        <div class="mb-3">
          <%= f.label :amount, class: "form-label" %>
          <%= f.text_field :amount, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :transaction_type, class: "form-label" %>
          <%= f.select :transaction_type, ['Deposit', 'Withdraw'], class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= f.submit 'Submit', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
