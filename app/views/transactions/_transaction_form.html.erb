  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@transaction, url: transactions_path) do |f| %>
          <%= f.hidden_field :transaction_type, value: action_name.capitalize %>
          
          <div class="mb-3">
            <h3 class="mb-4">Transaction Form</h3>
            <p><strong>Current Balance:</strong> $<%= current_user.account.balance %></p>
          </div>
          
          <div class="form-group">
            <%= f.label :amount %>
            <%= f.text_field :amount, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :transaction_type %>
            <%= f.select :transaction_type, ['Deposit', 'Withdraw'], { prompt: 'Select transaction type' }, class: "form-control" %>
          </div>
          
          <div class="mb-3 text-center">
            <%= f.submit 'Submit', class: "btn btn-primary" %>
          </div>
        <% end %>
        <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>">
            <%= value %>
            </div>
        <% end %>

      </div>
    </div>
  </div>
